<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_bs_frame_left"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="18dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_more_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_circle_add_text"
            android:drawablePadding="10dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="14dp"
            android:text="文字"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_more_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_circle_add_image"
            android:drawablePadding="10dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="14dp"
            android:text="图片"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_more_comment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_circle_add_comment"
            android:drawablePadding="10dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="14dp"
            android:text="书评"
            android:textColor="#000000"
            android:textSize="14sp" />



    </LinearLayout>


</LinearLayout>