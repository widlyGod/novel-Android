<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#fb811e">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="60px"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:src="@drawable/logo"
                    android:text="登录"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />


                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_fragment_personal_face"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="60px"
                    app:actualImageScaleType="centerInside"
                    app:failureImage="@drawable/personimage"
                    app:placeholderImage="@drawable/personimage"
                    app:roundAsCircle="true" />

            </RelativeLayout>

            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="300px"
                android:layout_below="@+id/appbar"
                app:indicator_height="16px"
                app:indicator_margin="16px"
                app:indicator_width="16px" />

            <LinearLayout
                android:id="@+id/ll_iv"
                android:layout_width="match_parent"
                android:layout_height="240px"
                android:layout_below="@+id/banner"
                android:background="#FFFFFF"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/home_ranking"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="25px"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawablePadding="20px"
                    android:drawableTop="@drawable/home_ranking"
                    android:gravity="center_horizontal"
                    android:text="排行"
                    android:textColor="#666666"
                    android:textSize="13sp" />

                <RadioButton
                    android:id="@+id/home_book"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawablePadding="20px"
                    android:drawableTop="@drawable/home_book"
                    android:gravity="center_horizontal"
                    android:text="书库"
                    android:textColor="#666666"
                    android:textSize="13sp" />

                <RadioButton
                    android:id="@+id/home_boy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawablePadding="20px"
                    android:drawableTop="@drawable/home_boy"
                    android:gravity="center_horizontal"
                    android:text="男生"
                    android:textColor="#666666"
                    android:textSize="13sp" />

                <RadioButton
                    android:id="@+id/home_girl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="25px"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawablePadding="20px"
                    android:drawableTop="@drawable/home_girl"
                    android:gravity="center_horizontal"
                    android:text="女生"
                    android:textColor="#666666"
                    android:textSize="13sp" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/ll_search"
                android:layout_width="match_parent"
                android:layout_height="170px"
                android:layout_below="@+id/ll_iv"
                android:background="#ececec">

                <RelativeLayout
                    android:id="@+id/rl_search"
                    android:layout_width="678px"
                    android:layout_height="60px"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30px"
                    android:background="@drawable/shape_etseach"
                    android:clickable="true"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/home_search"
                        android:paddingLeft="38px"
                        android:paddingRight="38px"
                        android:text="找书/找作者 关键字"
                        android:textColor="#c6c5c5" />
                </RelativeLayout>
                <!--<EditText-->
                <!--android:id="@+id/et_search"-->
                <!--android:layout_marginTop="30px"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:paddingRight="38px"-->
                <!--android:paddingLeft="38px"-->
                <!--android:textSize="12sp"-->
                <!--android:hint="找书/找作者 关键字"-->
                <!--android:gravity="center_vertical"-->
                <!--android:drawablePadding="8dp"-->
                <!--android:drawableRight="@drawable/home_search"-->
                <!--android:background="@drawable/shape_etseach"-->
                <!--android:layout_width="678px"-->
                <!--android:layout_height="60px" />-->
                <LinearLayout
                    android:layout_width="678px"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_search"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15px"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_hotsearch1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="书本123456789123"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/tv_hotsearch2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="书本234567891012"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/tv_hotsearch3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="书本3456789101234"
                        android:textColor="#666666" />
                </LinearLayout>
                <!--<EditText-->
                <!--android:id="@+id/et_room_number"-->
                <!--android:background="@drawable/shape_background_seach"-->
                <!--android:drawableLeft="@drawable/seach_icon"-->
                <!--android:drawablePadding="8dp"-->
                <!--android:gravity="center_vertical"-->
                <!--android:hint="输入房间号搜索"-->
                <!--android:imeOptions="actionSearch"-->
                <!--android:singleLine="true"-->
                <!--android:paddingLeft="12px"-->
                <!--android:textSize="28px"/>-->
            </RelativeLayout>

            <LinearLayout
                android:layout_below="@+id/ll_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


            </LinearLayout>



        </RelativeLayout>
    </ScrollView>
</RelativeLayout>


