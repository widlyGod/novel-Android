<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/iv_left"
            style="@style/iv_back" />

        <TextView
            android:id="@+id/toolbar"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:gravity="center"
            android:text="重置密码"
            android:textColor="@android:color/black"
            android:textSize="18sp"/>
    </RelativeLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/tl_username2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColorHint="#c7c7c7"
        app:hintEnabled="false">
        <!-- android:drawableBottom="@drawable/login_below" -->
        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_username2"
            style="@style/EditTextStyle"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:hint="请输入邮箱地址"
            android:maxLines="1"
            android:singleLine="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="37px"
            android:layout_marginRight="37px"
            android:background="#c7c7c7" />
    </android.support.design.widget.TextInputLayout>

    <RelativeLayout
        android:id="@+id/tl_yzm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_yzm"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_marginLeft="36px"
            android:background="@null"
            android:hint="邮箱验证码"
            android:inputType="number"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="#333333"
            android:textColorHint="#c7c7c7"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_sendyzm"
            android:layout_width="90dp"
            android:layout_height="60px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="36px"
            android:background="@drawable/loginyzm_bg"
            android:clickable="true"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="#999999"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_below="@+id/et_yzm"
            android:layout_marginLeft="37px"
            android:layout_marginRight="37px"
            android:background="#c7c7c7" />
    </RelativeLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tl_pw2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColorHint="#c7c7c7"
        app:hintEnabled="false"
        app:passwordToggleDrawable="@drawable/st_eteyes"
        app:passwordToggleEnabled="true">

        <!--
            android:drawableLeft="@drawable/login_delete"
        -->
        <!--<com.novel.cn.view.wight.ClearEditText-->
        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_pw2"
            style="@style/EditTextStyle"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:hint="新密码(6-12位字符)"
            android:inputType="textPassword"
            android:maxLength="12"
            android:password="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="37px"
            android:layout_marginRight="37px"
            android:background="#c7c7c7" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/tv_messagelogin"
        android:textColor="#f53d4e"
        android:layout_marginTop="10px"
        android:layout_marginLeft="50px"
        android:textSize="11sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_commit"
        android:clickable="false"
        android:layout_width="678px"
        android:layout_height="78px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="64px"
        android:background="@drawable/shape_login_btn"
        android:text="确 定"
        android:textColor="@android:color/white"
        android:textSize="18sp" />


</LinearLayout>