<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_touxiang"
        android:background="@drawable/personimage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50px"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/tv_name"
        android:text="用户名字"
        android:textColor="@color/c6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="32dp"
         />

    <RelativeLayout
        android:id="@+id/ll_bookreview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_touxiang"
        android:layout_marginTop="20px"
        android:orientation="horizontal">

        <com.novel.cn.view.wight.StateButton
            android:id="@+id/stb"
            android:text="见习"
            android:textSize="5sp"
            app:radius="7px"
            android:textColor="@android:color/white"
            app:normalBackgroundColor="#f4b2bd"
            android:layout_width="60px"
            android:layout_height="32px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="70px" />

        <TextView
            android:id="@+id/tv_pl"
            android:text="评论内容"
            android:textSize="13sp"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="90dp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_cf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_bookreview"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/tv_cf"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:text="来自手机站" />


        <TextView
            android:id="@+id/tv_dz"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/fabulous"
            android:textSize="12sp"
            android:layout_toLeftOf="@+id/tv_hf"
            android:text="0"
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tv_hf"
            android:clickable="true"
            android:textSize="12sp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:text="回复"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:layout_centerHorizontal="true"
        android:layout_width="350dp"
        android:layout_height="1px"
        android:layout_below="@+id/rl_cf"
        android:layout_marginTop="15dp"
        android:background="#c7c7c7"
        />

</RelativeLayout>