<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_czYdb"
        android:textSize="15sp"
        android:text="价格:"
        android:layout_marginLeft="36px"
        android:layout_marginTop="70px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_czYe"
        android:textSize="15sp"
        android:text="余额:"
        android:layout_marginLeft="36px"
        android:layout_marginTop="40px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <com.novel.cn.view.wight.StateButton
        android:textSize="16sp"
        app:normalTextColor="#ffffff"
        app:radius="45px"
        app:normalBackgroundColor="#ff7d00"
        android:text="余额不足，请充值"
        android:layout_marginTop="100px"
        android:layout_gravity="center_horizontal"
        android:layout_width="678px"
        android:layout_height="90px" />

    <RadioButton
        android:layout_marginTop="60px"
        android:layout_gravity="center_horizontal"
        android:textSize="14sp"
        android:textColor="#333333"
        android:text="自动订阅第一章"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:text="后续VIP章节购买不再提醒"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>