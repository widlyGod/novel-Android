<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="20px"
    >

    <RelativeLayout
        android:id="@+id/rl_free"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_book"
            android:layout_width="108px"
            android:layout_height="144px"
            android:layout_marginLeft="30px" />


        <TextView
            android:id="@+id/tv_novelTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:layout_marginLeft="40px"
            android:layout_toRightOf="@+id/iv_book"
            android:text="分类标题"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_bookNum"
            android:text="0本"
            android:drawablePadding="12px"
            android:drawableRight="@drawable/textright"
            android:layout_marginTop="20px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60px"
            android:textSize="14sp"
            android:textColor="#999999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:layout_below="@+id/rl_free"
        android:layout_marginLeft="30px"
        android:layout_marginTop="20px"
        android:background="#c7c7c7"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

</RelativeLayout>