<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.novel.cn.ui.MainActivity">


    <RelativeLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fb811e">
        <ImageView
            android:id="@+id/iv_left"
            style="@style/iv_back" />
        <TextView
            android:id="@+id/toolbar"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:gravity="center"
            android:text="登录"
            android:textColor="@android:color/white"
            android:textSize="18sp"></TextView>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="74px"
        android:src="@drawable/loginlogo" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="30px"
        android:fillViewport="false"
        app:layout_scrollFlags="scroll"
        app:tabIndicatorColor="#ff7f00"
        app:tabIndicatorHeight="2.0dp"
        app:tabSelectedTextColor="#ff7f00"
        app:tabTextColor="#999999" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_zhdl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--
             android:theme="@style/TextInputLayoutLineColor"
            -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/tl_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColorHint="#c7c7c7"
                app:errorEnabled="true"
            >
                <!-- android:drawableBottom="@drawable/login_below" -->
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_username"
                    style="@style/EditTextStyle"
                    android:layout_centerHorizontal="true"
                    android:background="@null"
                    android:hint="用户邮箱"
                    android:inputType="number|textEmailAddress" />
                <View
                    android:layout_marginRight="37px"
                    android:layout_marginLeft="37px"
                    android:background="#c7c7c7"
                    android:layout_width="match_parent"
                    android:layout_height="2px"/>


            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/tl_pw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColorHint="#c7c7c7"
                app:passwordToggleDrawable="@drawable/login_openeys"
                app:passwordToggleEnabled="true">

                <com.novel.cn.view.wight.ClearEditText
                    android:id="@+id/et_ps"
                    style="@style/EditTextStyle"
                    android:layout_centerHorizontal="true"
                    android:background="@null"
                    android:drawablePadding="-10dp"
                    android:hint="请输入密码"
                     />

                <View
                    android:layout_marginRight="37px"
                    android:layout_marginLeft="37px"
                    android:background="#c7c7c7"
                    android:layout_width="match_parent"
                    android:layout_height="2px"/>
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_yxzc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
    </RelativeLayout>
    
    <Button
        android:layout_marginTop="74px"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_login_btn"
        android:layout_width="678px"
        android:layout_height="78px" />

    <RelativeLayout
        android:layout_marginTop="82px"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_dsf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <TextView
                android:layout_width="170px"
                android:layout_height="2px"
                android:layout_gravity="center_vertical"
                android:background="#999999" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25px"
                android:layout_marginRight="25px"
                android:text="第三方账号登录"
                android:textColor="#666666"
                android:textSize="15sp" />
            <TextView
                android:layout_width="170px"
                android:layout_height="2px"
                android:layout_gravity="center_vertical"
                android:background="#999999" />
        </LinearLayout>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/login_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="60px"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/iv_qq"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/login_qq" />
        <ImageButton
            android:id="@+id/iv_wx"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/login_wx" />
        <ImageButton
            android:id="@+id/iv_wb"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/login_weibo" />
    </LinearLayout>


</LinearLayout>
