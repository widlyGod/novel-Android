<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150px">


    <RelativeLayout
        android:id="@+id/rl_all"
        android:layout_width="match_parent"
        android:layout_height="150px">


    <TextView
        android:id="@+id/tv_zjbt"
        android:layout_marginLeft="82px"
        android:textColor="#999999"
        android:textSize="17sp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_isReading"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30px"
            android:src="@drawable/mulu_isreading"
            />

        <ImageView
            android:id="@+id/iv_isFree"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30px"
            android:src="@drawable/mulu_isfress"
            />

        <ImageView
            android:id="@+id/iv_isLocked"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30px"
            android:src="@drawable/mulu_islock"
            />
    </LinearLayout>




    <View
        android:layout_alignParentBottom="true"
        android:background="@color/fgx"
        android:layout_marginRight="60px"
        android:layout_marginLeft="80px"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    </RelativeLayout>

</RelativeLayout>