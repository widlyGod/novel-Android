<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.novel.cn.ui.MainActivity">

    <RelativeLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/iv_left"
            style="@style/iv_back" />

        <TextView
            android:id="@+id/toolbar"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:gravity="center"
            android:text="注册"
            android:textColor="@android:color/black"
            android:textSize="18sp"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_yxzc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <!--
                     android:theme="@style/TextInputLayoutLineColor"
                    -->
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tl_nicen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textColorHint="#c7c7c7"
                        app:hintEnabled="false">
                        <!-- android:drawableBottom="@drawable/login_below" -->
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_nicen"
                            style="@style/EditTextStyle"
                            android:layout_centerHorizontal="true"
                            android:background="@null"
                            android:hint="请输入昵称(1-20位英文、中文或数字组成)"
                            android:maxLength="20" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2px"
                            android:layout_marginLeft="37px"
                            android:layout_marginRight="37px"
                            android:background="#c7c7c7" />


                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tl_username2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textColorHint="#c7c7c7"
                        app:hintEnabled="false">
                        <!-- android:drawableBottom="@drawable/login_below" -->
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_username2"
                            style="@style/EditTextStyle"
                            android:layout_centerHorizontal="true"
                            android:background="@null"
                            android:hint="请输入邮箱地址"
                            android:maxLines="1"
                            android:singleLine="true" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2px"
                            android:layout_marginLeft="37px"
                            android:layout_marginRight="37px"
                            android:background="#c7c7c7" />
                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tl_pw2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textColorHint="#c7c7c7"
                        app:hintEnabled="false"
                        app:passwordToggleDrawable="@drawable/st_eteyes"
                        app:passwordToggleEnabled="true">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_pw2"
                            style="@style/EditTextStyle"
                            android:layout_centerHorizontal="true"
                            android:background="@null"
                            android:hint="请设置密码(6-12位字符)"
                            android:inputType="textPassword"
                            android:maxLength="12"
                            android:password="true" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2px"
                            android:layout_marginLeft="37px"
                            android:layout_marginRight="37px"
                            android:background="#c7c7c7" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tl_conpw"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textColorHint="#c7c7c7"
                        app:hintEnabled="false"
                        app:passwordToggleDrawable="@drawable/st_eteyes"
                        app:passwordToggleEnabled="true">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_conps"
                            style="@style/EditTextStyle"
                            android:layout_centerHorizontal="true"
                            android:background="@null"
                            android:hint="请确认密码"
                            android:inputType="textPassword"
                            android:maxLength="12"
                            android:password="true" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2px"
                            android:layout_marginLeft="37px"
                            android:layout_marginRight="37px"
                            android:background="#c7c7c7" />
                    </android.support.design.widget.TextInputLayout>

                    <RelativeLayout
                        android:id="@+id/tl_yzm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_yzm"
                            android:layout_width="170dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="36px"
                            android:background="@null"
                            android:hint="邮箱验证码"
                            android:inputType="number"
                            android:maxLines="1"
                            android:paddingLeft="10dp"
                            android:singleLine="true"
                            android:textColor="#333333"
                            android:textColorHint="#c7c7c7"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_sendyzm"
                            android:layout_width="90dp"
                            android:layout_height="60px"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="36px"
                            android:background="@drawable/loginyzm_bg"
                            android:clickable="true"
                            android:gravity="center"
                            android:text="获取验证码"
                            android:textColor="#999999"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2px"
                            android:layout_below="@+id/et_yzm"
                            android:layout_marginLeft="37px"
                            android:layout_marginRight="37px"
                            android:background="#c7c7c7" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_messageregist"
                        android:textColor="#f53d4e"
                        android:layout_marginTop="10px"
                        android:layout_marginLeft="50px"
                        android:textSize="11sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </RelativeLayout>


            <Button
                android:id="@+id/btn_LoginOrRes"
                android:clickable="false"
                android:background="@drawable/shape_login_btn"
                android:layout_width="678px"
                android:layout_height="78px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15px"
                android:text="注 册"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="37px"
                android:layout_marginTop="20px"
                >

                <LinearLayout
                    android:id="@+id/ll_zhucexy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <CheckBox
                        android:id="@+id/cb_zhuce"
                        android:text="我已阅读并同意《"
                        android:textColor="#999999"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />
                    <TextView
                        android:id="@+id/tv_yhzcxy"
                        android:textColor="#328b86"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用户注册协议"
                        android:textSize="13sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="》"
                        android:textSize="13sp" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="22px">

                <LinearLayout
                    android:id="@+id/ll_dsf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:layout_width="170px"
                        android:layout_height="2px"
                        android:layout_gravity="center_vertical"
                        android:background="#999999" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25px"
                        android:layout_marginRight="25px"
                        android:text="第三方账号登录"
                        android:textColor="#666666"
                        android:textSize="15sp" />
                    <TextView
                        android:layout_width="170px"
                        android:layout_height="2px"
                        android:layout_gravity="center_vertical"
                        android:background="#999999" />

                </LinearLayout>
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/login_ll"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_marginTop="40px"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/iv_qq"
                    android:layout_gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="1"
                    android:background="@null"
                    android:clickable="true"
                    android:src="@drawable/login_qq" />

                <ImageButton
                    android:id="@+id/iv_wx"
                    android:layout_gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:clickable="true"
                    android:src="@drawable/login_wx" />

                <ImageButton
                    android:id="@+id/iv_wb"
                    android:layout_gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:clickable="true"
                    android:src="@drawable/login_weibo" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
