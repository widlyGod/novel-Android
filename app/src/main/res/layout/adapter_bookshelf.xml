<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_bookshelf"
        android:layout_width="match_parent"
        android:layout_height="228px">

        <ImageView
            android:id="@+id/iv_book"
            android:layout_width="171px"
            android:layout_height="228px"
            android:layout_marginLeft="36px" />

        <TextView
            android:id="@+id/tv_bookTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@+id/iv_book"
            android:text="书本名称"
            android:textColor="#333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_reUpda"
            android:text="最近更新:"
            android:textColor="#999999"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginRight="30px"
            android:layout_marginTop="53px"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@+id/iv_book"
            android:layout_below="@+id/tv_bookTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_toRightOf="@+id/iv_book"
            android:layout_marginLeft="20px"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--
                            app:pressedBackgroundColor="@color/colorPrimaryDark"
                            app:unableBackgroundColor="@android:color/holo_red_light"
            -->


            <com.novel.cn.view.wight.StateButton
                android:id="@+id/btn_jx"
                android:layout_width="130px"
                android:layout_height="48px"
                android:gravity="center"
                android:text="继续阅读"
                android:textSize="12sp"
                app:normalTextColor="@android:color/white"
                app:normalBackgroundColor="@color/colorOrange"
                app:radius="10px"
                />
<!--  48px  -->

            <com.novel.cn.view.wight.StateButton
                android:id="@+id/btn_qx"
                android:layout_marginLeft="50px"
                android:layout_width="130px"
                android:layout_height="48px"
                android:gravity="center"
                android:text="取消"
                android:textSize="12sp"
                app:normalStrokeColor="@color/colorOrange"
                app:normalStrokeWidth="2px"
                app:normalTextColor="@color/colorOrange"
                app:radius="10px"
                />
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>