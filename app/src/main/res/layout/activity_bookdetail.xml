<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#fb811e">

        <ImageView
            android:id="@+id/iv_left"
            style="@style/iv_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="书籍详情"
            android:textColor="@android:color/white"
            android:textSize="17sp" />
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_bookdetail"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_free"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60px">

                <ImageView
                    android:id="@+id/iv_book"
                    android:layout_width="171px"
                    android:layout_height="228px"
                    android:layout_marginLeft="30px" />

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="48px"
                    android:layout_height="30px"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/iv_book"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/tv_novelTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_toRightOf="@+id/iv_book"
                    android:text="测试标题"
                    android:textColor="#333333"
                    android:textSize="13sp" />


                <ImageView
                    android:id="@+id/btn_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="60px"
                    android:layout_marginTop="50px"
                    android:src="@drawable/detail_share" />

                <RelativeLayout
                    android:id="@+id/rl_zuozhe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_novelTitle"
                    android:layout_marginTop="16px"
                    android:layout_toRightOf="@+id/iv_book">

                    <TextView
                        android:id="@+id/tv_novelAuthor"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20px"
                        android:text="作者  著"
                        android:textColor="#fc9924"
                        android:textSize="12sp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="70px"
                    android:layout_height="35px"
                    android:layout_below="@+id/rl_zuozhe"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="15px"
                    android:layout_toRightOf="@+id/iv_book"
                    android:background="@drawable/shape_typebook"
                    android:gravity="center"
                    android:text="玄幻"
                    android:textColor="#fd6369"
                    android:textSize="10sp" />

                <com.novel.cn.view.wight.StateButton
                    android:id="@+id/tv_lianzai"
                    android:layout_width="75px"
                    android:layout_height="35px"
                    android:layout_below="@+id/rl_zuozhe"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="15px"
                    android:layout_toRightOf="@+id/tv_type"
                    android:background="@null"
                    android:minHeight="0dp"
                    android:text="连载中"
                    android:textColor="#01C78A"
                    android:textSize="10sp"
                    app:normalStrokeColor="#01C78A"
                    app:normalStrokeWidth="1px"
                    app:normalTextColor="#01C78A"
                    app:radius="10px" />

                <TextView
                    android:id="@+id/tv_jieshao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_type"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="30px"
                    android:layout_marginTop="26px"
                    android:layout_toRightOf="@+id/iv_book"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="简介:hi的撒嗲嗲水库新村最新库存状况新城控制性可操作性学科成绩仔细看这些机场快线进口出口限制自己开车幸存者"
                    android:textColor="#999999"
                    android:textSize="12sp" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
                android:orientation="horizontal">

                <com.novel.cn.view.wight.StateButton
                    android:id="@+id/sbtn_jxyd"
                    android:layout_width="186px"
                    android:layout_height="66px"
                    android:layout_marginLeft="30px"
                    android:gravity="center"
                    android:text="立即阅读"
                    android:textSize="13sp"
                    app:normalBackgroundColor="@color/colorOrange"
                    app:normalTextColor="#ffffff"
                    app:pressedBackgroundColor="@color/colorOrange"
                    app:radius="4px" />

                <com.novel.cn.view.wight.StateButton
                    android:id="@+id/sbtn_jrsj"
                    android:layout_width="186px"
                    android:layout_height="66px"
                    android:layout_marginLeft="30px"
                    android:gravity="center"
                    android:text="加入书架"
                    android:textSize="13sp"
                    app:normalStrokeColor="#cccccc"
                    app:normalStrokeWidth="2px"
                    app:normalTextColor="#666666"
                    app:radius="4px" />

                <CheckBox
                    android:id="@+id/cb_zd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80px"
                    android:button="@null"
                    android:drawableLeft="@drawable/detail_close"
                    android:text="自动订阅"
                    android:textSize="11sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12px"
                    android:layout_marginTop="23px"
                    android:src="@drawable/detail_que" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36px"
                android:layout_marginRight="60px"
                android:layout_marginTop="56px"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="#999999"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/iv_zk"
                android:layout_marginBottom="50px"
                android:drawablePadding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="36px"
                android:layout_marginTop="10px"
                android:drawableRight="@drawable/down"
                android:text="展开" />


            <View
                android:background="#f3f3f3"
                android:layout_width="match_parent"
                android:layout_height="20px"/>


            <RelativeLayout
                android:id="@+id/rl_ml"
                android:layout_width="match_parent"
                android:layout_height="148px">
                <ImageView
                    android:background="#4DD8AD"
                    android:layout_centerVertical="true"
                    android:layout_width="10px"
                    android:layout_height="45px" />
                <TextView
                    android:id="@+id/tv_ml"
                    android:text="目录 最新章节：第一章"
                    android:layout_marginLeft="36px"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorGrary"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_time"
                    android:text="时间"
                    android:layout_marginLeft="50dp"
                    android:layout_below="@+id/tv_ml"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:src="@drawable/right"
                    android:layout_marginRight="36px"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


            <View
                android:background="#f3f3f3"
                android:layout_width="match_parent"
                android:layout_height="20px"/>



            <!--打赏-->
            <include
                layout="@layout/layout_dashang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <View
                android:background="#f3f3f3"
                android:layout_width="match_parent"
                android:layout_height="20px"/>
            <!--粉丝动态-->


            <!--书评-->


            <!--主编推荐-->


        </LinearLayout>
    </ScrollView>
</LinearLayout>