<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<!--
        android:visibility="gone"
-->
    <LinearLayout
        android:id="@+id/ll_yxzc"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--
         android:theme="@style/TextInputLayoutLineColor"
        -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/tl_nicen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColorHint="#c7c7c7"
            app:hintEnabled="false">
            <!-- android:drawableBottom="@drawable/login_below" -->
            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_nicen"
                style="@style/EditTextStyle"
                android:maxLength="20"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:hint="请输入昵称(1-20位英文、中文或数字组成)"
                 />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="37px"
                android:layout_marginRight="37px"
                android:background="#c7c7c7" />


        </android.support.design.widget.TextInputLayout>


        <!--
           app:passwordToggleDrawable="@drawable/login_openeys"
        -->

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tl_username2"
            app:hintEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColorHint="#c7c7c7"
           >
            <!-- android:drawableBottom="@drawable/login_below" -->
            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_username2"
                style="@style/EditTextStyle"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:hint="请输入邮箱地址"
                 />
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="37px"
                android:layout_marginRight="37px"
                android:background="#c7c7c7" />
        </android.support.design.widget.TextInputLayout>



        <android.support.design.widget.TextInputLayout
            android:id="@+id/tl_pw2"
            app:hintEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColorHint="#c7c7c7"
            app:passwordToggleDrawable="@drawable/st_eteyes"
            app:passwordToggleEnabled="true">

            <!--
                android:drawableLeft="@drawable/login_delete"
            -->
            <!--<com.novel.cn.view.wight.ClearEditText-->
            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_pw2"
                style="@style/EditTextStyle"
                android:maxLength="12"
                android:password="true"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:hint="请设置密码(6-12位字符)"
                android:inputType="textPassword" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="37px"
                android:layout_marginRight="37px"
                android:background="#c7c7c7" />
        </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tl_conpw"
        app:hintEnabled="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColorHint="#c7c7c7"
        app:passwordToggleDrawable="@drawable/st_eteyes"
        app:passwordToggleEnabled="true">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_conps"
            style="@style/EditTextStyle"
            android:maxLength="12"
            android:password="true"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:hint="请确认密码"
            android:inputType="textPassword" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="37px"
            android:layout_marginRight="37px"
            android:background="#c7c7c7" />
    </android.support.design.widget.TextInputLayout>


    <RelativeLayout
        android:id="@+id/tl_yzm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        >
        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_yzm"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="36px"
            android:background="@null"
            android:hint="邮箱验证码"
            android:textColor="#333333"
            android:textColorHint="#c7c7c7"
            android:textSize="15sp"
            android:inputType="number" />

        <TextView
            android:id="@+id/tv_sendyzm"
            android:layout_width="90dp"
            android:layout_height="60px"
            android:layout_centerVertical="true"
            android:layout_marginRight="36px"
            android:layout_alignParentRight="true"
            android:background="@drawable/loginyzm_bg"
            android:clickable="true"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="#999999"
            android:textSize="14sp" />

        <View
            android:layout_below="@+id/et_yzm"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="37px"
            android:layout_marginRight="37px"
            android:background="#c7c7c7" />
    </RelativeLayout>
    </LinearLayout>

</LinearLayout>