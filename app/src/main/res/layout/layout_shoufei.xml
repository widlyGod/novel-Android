<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingLeft="18dp"
    android:paddingRight="18dp">


    <TextView
        android:id="@+id/tv_book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="-5dp"
        android:text="《风龙九天》"
        android:textColor="@color/color_666666" />


    <TextView
        android:id="@+id/tv_chaptername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="第十章  冤家路窄"
        android:textColor="@color/color_333333" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_author"
            android:drawablePadding="2dp"
            android:text="皮卡丘"
            android:textColor="@color/color_999999"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_words"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_font"
            android:drawablePadding="2dp"
            android:text="皮卡丘"
            android:textColor="@color/color_999999"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_update_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.4"
            android:drawableLeft="@drawable/ic_time"
            android:drawablePadding="2dp"
            android:text="2018-10-15 10:33:#3"
            android:textColor="@color/color_999999"
            android:textSize="13sp" />

    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格：20阅读币"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_blance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="余额：0阅读币 | 0钻石"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_price" />
    </android.support.constraint.ConstraintLayout>


    <com.flyco.roundview.RoundTextView
        android:id="@+id/tv_zhifu"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="余额不足，立即充值"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:rv_backgroundColor="#5e8fca"
        app:rv_isRadiusHalfHeight="true" />

    <CheckedTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:drawablePadding="3dp"
        android:checked="true"
        android:id="@+id/ctv_sub"
        android:drawableLeft="@drawable/selector_check2"
        android:gravity="center"
        android:text="自动订阅下一章" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="后续购买不再提醒"
        android:textColor="@color/color_666666"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="已购买章节不会重复购买"
        android:textColor="@color/color_666666"
        android:textSize="12sp" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp">

        <com.flyco.roundview.RoundTextView
            android:id="@+id/tv_prev"
            android:layout_width="98dp"
            android:layout_height="33dp"
            android:gravity="center"
            android:text="上一章"
            android:textColor="@color/color_666666"
            app:rv_strokeColor="#cccccc"
            app:rv_strokeWidth="1dp" />

        <com.flyco.roundview.RoundTextView
            android:id="@+id/tv_contents"
            android:layout_width="98dp"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="目录"
            android:textColor="@color/color_666666"
            app:rv_strokeColor="#cccccc"
            app:rv_strokeWidth="1dp" />

        <com.flyco.roundview.RoundTextView
            android:id="@+id/tv_next"
            android:layout_width="98dp"
            android:layout_height="33dp"
            android:layout_gravity="right"
            android:gravity="center"
            android:text="下一章"
            android:textColor="@color/color_666666"
            app:rv_strokeColor="#cccccc"
            app:rv_strokeWidth="1dp" />
    </FrameLayout>
</LinearLayout>