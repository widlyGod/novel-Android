<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@drawable/personalcenter_bg">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="个人中心"
                        android:textColor="@android:color/white"
                        android:textSize="18sp" />

                    <!--<ImageView-->
                        <!--android:id="@+id/iv_mynews"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_alignParentRight="true"-->
                        <!--android:layout_centerVertical="true"-->
                        <!--android:layout_marginRight="60px"-->
                        <!--android:src="@drawable/my_new" />-->
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_tx"
                android:layout_width="160px"
                android:layout_height="160px"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="63dp"
                android:background="@drawable/circle_shape">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_personiv"
                    android:layout_width="150px"
                    android:layout_height="150px"
                    android:layout_centerInParent="true"
                    app:actualImageScaleType="centerCrop"
                    app:failureImage="@drawable/personimage"
                    app:placeholderImage="@drawable/personimage"
                    app:roundAsCircle="true" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_tx"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14px"
                android:text="游客"
                android:textColor="#333333"
                android:textSize="15sp" />

            <RelativeLayout
                android:id="@+id/rl_loginbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/tv_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="14px"
                    android:background="@drawable/bule_bg"
                    android:paddingBottom="2dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="2dp"
                    android:text="LV0"
                    android:textColor="#50adf8"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_gy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_level"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="14px"
                    android:text="这家伙很懒，什么都没有留下"
                    android:textColor="#666666"
                    android:textSize="13sp" />
                
                <Button
                    android:id="@+id/btn_login"
                    android:visibility="gone"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:text="登录"
                    android:background="@drawable/shape_login_conbtn"
                    android:layout_centerInParent="true"
                    android:layout_width="150px"
                    android:layout_height="60px" />
                
                
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_dia"
                android:layout_width="678px"
                android:layout_height="190px"
                android:layout_below="@+id/rl_loginbtn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32px"
                android:background="@drawable/white_bg">

                <TextView
                    android:id="@+id/tv_masonry"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/masonry"
                    android:gravity="center_horizontal"
                    android:text="0" />

                <TextView
                    android:id="@+id/tv_reward"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/reward"
                    android:gravity="center_horizontal"
                    android:text="0" />

                <TextView
                    android:id="@+id/tv_recticket"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/recticket"
                    android:gravity="center_horizontal"
                    android:text="0" />

                <TextView
                    android:id="@+id/tv_montick"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/montick"
                    android:gravity="center_horizontal"
                    android:text="0" />
            </LinearLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="10px"
                android:layout_below="@+id/ll_dia"
                android:layout_marginTop="34px"
                android:background="#F3F3F3" />

            <RelativeLayout
                android:id="@+id/rl_mycount"
                android:layout_width="match_parent"
                android:layout_height="140px"
                android:layout_below="@+id/view1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="36px"
                    android:src="@drawable/mywallet" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的钱包"
                        android:textColor="#333333"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_ydb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0阅读币"
                        android:textColor="#ff7d00"
                        android:textSize="11sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_cz"
                    android:layout_width="120px"
                    android:layout_height="50px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="60px"
                    android:background="@drawable/org_bg"
                    android:gravity="center"
                    android:text="充值"
                    android:textColor="#ff7d00"
                    android:textSize="12sp" />
            </RelativeLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="10px"
                android:layout_below="@+id/rl_mycount"
                android:background="#F3F3F3" />

            <RelativeLayout
                android:id="@+id/rl_news"
                android:layout_width="match_parent"
                android:layout_height="110px"
                android:layout_below="@+id/view2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="36px"
                    android:drawableLeft="@drawable/my_news"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:text="我的消息"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/news_num"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_bg"
                    android:text="0"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="60px"
                    android:src="@drawable/right" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="#c7c7c7" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_share"
                android:layout_width="match_parent"
                android:layout_height="110px"
                android:layout_below="@+id/rl_news">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="36px"
                    android:drawableLeft="@drawable/my_share"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:text="我的分享"
                    android:textColor="#333333" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="60px"
                    android:src="@drawable/right" />

                <TextView
                    android:id="@+id/share_num"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_bg"
                    android:text="0"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="#c7c7c7" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_conhis"
                android:layout_width="match_parent"
                android:layout_height="110px"
                android:layout_below="@+id/rl_share">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="36px"
                    android:drawableLeft="@drawable/my_conhis"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:text="消费历史"
                    android:textColor="#333333" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="60px"
                    android:src="@drawable/right" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="#c7c7c7" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_set"
                android:layout_width="match_parent"
                android:layout_height="110px"
                android:layout_below="@+id/rl_conhis">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="36px"
                    android:drawableLeft="@drawable/my_set"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:text="设置"
                    android:textColor="#333333" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="60px"
                    android:src="@drawable/right" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="#c7c7c7" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_verinf"
                android:layout_width="match_parent"
                android:layout_height="110px"
                android:layout_below="@+id/rl_set">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="36px"
                    android:drawableLeft="@drawable/my_verinf"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:text="版本信息"
                    android:textColor="#333333" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="60px"
                    android:src="@drawable/right" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="#c7c7c7" />
            </RelativeLayout>


            <Button
                android:id="@+id/btn_out"
                android:layout_width="290px"
                android:layout_height="80px"
                android:layout_below="@+id/rl_verinf"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="76px"
                android:layout_marginTop="84px"
                android:background="#fb811e"
                android:text="退出登录"
                android:textColor="#ffffff"
                android:textSize="16sp" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>