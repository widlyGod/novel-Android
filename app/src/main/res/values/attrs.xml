<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MultiStateView">
        <attr name="msv_loadingView" format="reference" />
        <attr name="msv_emptyView" format="reference" />
        <attr name="msv_errorView" format="reference" />
        <attr name="msv_empty_text" format="string" />
        <attr name="msv_empty_icon" format="reference" />
        <attr name="msv_error_text" format="string" />
        <attr name="msv_error_icon" format="reference" />

        <attr name="msv_viewState" format="enum">
            <enum name="content" value="0" />
            <enum name="error" value="1" />
            <enum name="empty" value="2" />
            <enum name="loading" value="3" />
        </attr>
        <attr name="msv_animateViewChanges" format="boolean" />
    </declare-styleable>


    <declare-styleable name="LoadingView">
        <attr name="ui_loading_view_size" format="dimension" />
        <attr name="ui_loading_view_stroke_width" format="dimension" />
        <attr name="android:color" />
    </declare-styleable>
</resources>